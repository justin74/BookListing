<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/book_name_text_view"
        style="@style/BookTextViewStyle"
        tools:text="@string/default_book_name"
        android:padding="@dimen/book_text_view_layout_margin"
        android:textSize="@dimen/book_name_text_view_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_author_text_view"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        style="@style/BookTextViewStyle"
        tools:text="@string/default_author"
        android:textSize="@dimen/author_name_text_view_text_size" />

</LinearLayout>